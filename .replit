# Al-Shaye Family Tree Application

run = "npm run dev"
entrypoint = "package.json"
onBoot = "npm install && npx prisma generate"

hidden = [".config", "package-lock.json", ".next", "node_modules"]

[nix]
channel = "stable-24_05"

[env]
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_global/bin:/home/runner/$REPL_SLUG/node_modules/.bin:./node_modules/.bin"
npm_config_prefix = "/home/runner/$REPL_SLUG/.config/npm/node_global"
# DATABASE_URL is now set via Replit Secrets (PostgreSQL connection string)

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[languages]

[languages.typescript]
pattern = "**/{*.ts,*.tsx}"

[languages.typescript.languageServer]
start = "typescript-language-server --stdio"

[deployment]
run = ["sh", "-c", "npm install && npx prisma generate && npx prisma db push && npm run build && npm start"]
deploymentTarget = "cloudrun"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 80
