# Al-Shaye Family Tree Application - Replit Configuration
# Following Replit deployment best practices

run = "npm run dev"
entrypoint = "src/app/page.tsx"

hidden = [".config", "package-lock.json", ".next", "node_modules"]

[nix]
channel = "stable-24_05"

[env]
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_global/bin:/home/runner/$REPL_SLUG/node_modules/.bin:./node_modules/.bin"
npm_config_prefix = "/home/runner/$REPL_SLUG/.config/npm/node_global"
# Memory optimization for Node.js builds
NODE_OPTIONS = "--max-old-space-size=2048"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[languages]

[languages.typescript]
pattern = "**/{*.ts,*.tsx}"

[languages.typescript.languageServer]
start = "typescript-language-server --stdio"

# Deployment Configuration
# IMPORTANT: Build command uses prisma generate only (NOT prisma db push)
# Run migrations manually via Shell when schema changes: npx prisma migrate deploy
[deployment]
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "npm run start"]
deploymentTarget = "cloudrun"
ignorePorts = false

# Port configuration - Frontend on port 5000
[[ports]]
localPort = 5000
externalPort = 80
