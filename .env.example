# Al-Shaye Family Tree - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="file:./prisma/family.db"

# ===========================================
# AUTHENTICATION
# ===========================================
# Secret for JWT tokens (generate with: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-here"

# Session duration (in days)
SESSION_DURATION_DAYS=7
REMEMBER_ME_DURATION_DAYS=30

# ===========================================
# SENTRY (Error Monitoring)
# ===========================================
# Get these from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# ===========================================
# EMAIL SERVICE
# ===========================================
# Provider: resend, sendgrid, mailgun, smtp, or none
EMAIL_PROVIDER=none
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME="Al-Shaye Family Tree"

# Resend
RESEND_API_KEY=

# SendGrid
SENDGRID_API_KEY=

# Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# SMTP (for custom email servers)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=true

# ===========================================
# SMS/OTP SERVICE
# ===========================================
# Provider: twilio, vonage, messagebird, or none
OTP_PROVIDER=none
OTP_FROM_NUMBER=

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Vonage (Nexmo)
VONAGE_API_KEY=
VONAGE_API_SECRET=

# MessageBird
MESSAGEBIRD_API_KEY=

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Enable test mode for email/SMS (no actual messages sent)
TEST_MODE=true

# Node environment
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# OPTIONAL: EXTERNAL STORAGE
# ===========================================
# For image uploads (if using cloud storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_S3_REGION=

# Or Cloudinary
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# ===========================================
# OPTIONAL: REDIS (for production caching/rate-limiting)
# ===========================================
# REDIS_URL=redis://localhost:6379
